{% extends 'base.html.twig' %}

{% block title %}Symrecipe - Ajouter un ingredient
{% endblock %}

{% block body %}
	<div class="container">

		<h3 class="mt-4">
			Ajouter ingredient
		</h3>
		{{ form_start(ingrediontForm) }}
		<div class="my-custom-class-for-errors">
			{{ form_errors(ingrediontForm) }}
		</div>
		<div class="form-group">
			{{ form_label(ingrediontForm.name) }}
			{{ form_widget(ingrediontForm.name) }}
			{{ form_errors(ingrediontForm.name) }}
		</div>
		<div class="form-group">
			{{ form_label(ingrediontForm.price) }}
			{{ form_widget(ingrediontForm.price) }}
			{{ form_errors(ingrediontForm.price) }}
		</div>
		{{ form_end(ingrediontForm) }}
	</div>
{% endblock %}
